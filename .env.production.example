# Production Environment Configuration Template

# Application
NODE_ENV=production
PORT=5001

# Frontend URL (Update with your production domain)
FRONTEND_URL=https://www.oliveedge.com

# MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/oliveedge?retryWrites=true&w=majority

# JWT
JWT_SECRET=<generate-a-strong-random-secret-here>

# Razorpay (Production Keys)
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxx

# Cloudinary (Production Account)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (SMTP - Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@oliveedge.com

# Error Tracking (Optional - Sentry)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Analytics (Optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX
